{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "sazed-frontend",
  "version": "0.1.0",
  "identifier": "com.aatha.sazed-frontend",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:3000",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Sazed",
        "width": 900,
        "height": 620,
        "minWidth": 600,
        "minHeight": 480,
        "decorations": false,
        "transparent": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
